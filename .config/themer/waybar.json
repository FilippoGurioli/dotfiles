{
  "position": "top",
  "modules-left": ["custom/distro-icon", "hyprland/workspaces"],
  "modules-center": ["hyprland/window"],
  "modules-right": ["custom/updates", "pulseaudio", "backlight", "bluetooth", "battery", "power-profiles-daemon", "network", "clock"],
  "custom/distro-icon": {
    "format": "",
    "interval": 3600
  },
  "hyprland/window": {
    "format": "{class}" 
  },
  "custom/updates": {
    "exec": "~/.config/waybar/scripts/updates.sh",
    "interval": 60,
    "return-type": "json",
    "format": "{}"
  },
  "clock": {
    "format": "{:%H:%M %d/%m}",
    "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>"
  },
  "battery": {
    "states": {
      "warning": 30,
      "critical": 20
    },
    "format": "{icon} {capacity}%",
    "format-warning": "{icon} {capacity}%",
    "format-critical": "{icon} {capacity}%",
    "format-charging": " {capacity}%",
    "format-plugged": " {capacity}%",
    "format-alt": "{icon} {time}",
    "format-full": "  {capacity}%",
    "format-icons": ["", "", "", "", ""],
    "tooltip-format": "{time}"
  },
  "power-profiles-daemon": {
    "format": "{icon}",
    "format-icons": {
      "default": "",
      "performance": "",
      "balanced": "",
      "power-saver": ""
    },
    "tooltip-format": "{profile} mode"
  },
  "network": {
    "format-wifi": "{icon}",
    "format-icons": {
      "default": ["󰤯", "󰤟", "󰤢", "󰤥", "󰤨"]
    },
    "format-ethernet": "Disconnected",
    "format-linked": "{ifname} (No IP) ",
    "format-disconnected": "Disconnected",
    "tooltip-format-wifi": "{essid}"
  },
  "pulseaudio": {
      "format": "{icon}",
      "format-muted": "",
      "format-icons": {
          "default": ["", "", " "]
      },
      "tooltip-format": "{volume}%"
  },
  "backlight": {
    "format": "{icon}",
    "format-icons": {
      "default": ["󰌶", "󱩎", "󱩏", "󱩐", "󱩑", "󱩒", "󱩓", "󱩔", "󱩕", "󱩖", "󰛨"]
    },
    "tooltip-format": "{percent}%"
  },
  "bluetooth": {
    "format": "",
    "format-disabled": "󰂲 disabled",
    "format-off": "󰂲",
    "format-on": "",
    "format-connected": " {num_connections}",
    "format-connected-battery": "{num_connections} {device_battery_percentage}%",
    "tooltip-format": "{controller_alias}\t{controller_address}\n\n{num_connections} connected",
    "tooltip-format-connected": "{controller_alias}\t{controller_address}\n\n{num_connections} connected\n\n{device_enumerate}",
    "tooltip-format-enumerate-connected": "{device_alias}\t{device_address}",
    "tooltip-format-enumerate-connected-battery": "{device_alias}\t{device_address}\t{device_battery_percentage}%",
    "on-click": "blueberry"
  }
}