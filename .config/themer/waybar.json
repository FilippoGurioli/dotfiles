{
  "position": "top",
  "modules-left": ["custom/distro-icon", "hyprland/workspaces"],
  "modules-center": ["hyprland/window"],
  "modules-right": ["custom/updates", "network", "pulseaudio", "backlight", "battery", "power-profiles-daemon", "clock"],
  "custom/distro-icon": {
    "format": "<span size='20000' foreground='$primary_color'></span>",
    "interval": 3600
  },
  "hyprland/window": {
    "format": "{class}" 
  },
  "custom/updates": {
    "exec": "~/.config/waybar/scripts/updates.sh",
    "interval": 60,
    "return-type": "json",
    "format": "{}"
  },
  "clock": {
    "format": "{:%H:%M %d/%m}",
    "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>"
  },
  "battery": {
    "states": {
      "warning": 30,
      "critical": 20
    },
    "format": "{icon} {capacity}%",
    "format-warning": "{icon} {capacity}%",
    "format-critical": "{icon} {capacity}%",
    "format-charging": " {capacity}%",
    "format-plugged": " {capacity}%",
    "format-alt": "{icon} {time}",
    "format-full": "  {capacity}%",
    "format-icons": ["", "", "", "", ""],
    "tooltip-format": "{time}"
  },
  "power-profiles-daemon": {
    "format": "{icon}",
    "format-icons": {
      "default": "",
      "performance": "",
      "balanced": "",
      "power-saver": ""
    },
    "tooltip-format": "{profile} mode"
  },
  "network": {
    "format-wifi": "{essid}",
    "format-ethernet": "Disconnected",
    "format-linked": "{ifname} (No IP) ",
    "format-disconnected": "Disconnected",
    "tooltip-format-wifi": "Signal Strenght: {signalStrength}%"
  },
  "pulseaudio": {
      "format": "{icon}",
      "format-muted": "",
      "format-icons": {
          "default": ["", "", " "]
      },
      "tooltip-format": "{volume}%"
  },
  "backlight": {
    "format": "{icon}",
    "format-icons": {
      "default": ["󰌶", "󱩎", "󱩏", "󱩐", "󱩑", "󱩒", "󱩓", "󱩔", "󱩕", "󱩖", "󰛨"]
    },
    "tooltip-format": "{percent}%"
  }
}